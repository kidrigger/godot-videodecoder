FROM godot-videodecoder-ubuntu-windows:latest

WORKDIR /opt/godot-cpp
COPY ./godot-cpp .
RUN scons -c
RUN scons platform=windows arch=x86_32 target=template_release

WORKDIR /opt/godot-videodecoder/ffmpeg-static
COPY ./ffmpeg-static .
# download dependencies
RUN ./build.sh -d -p win32

ARG JOBS=1
ENV JOBS=$JOBS
ENV THIRDPARTY_DIR=/opt/godot-videodecoder/thirdparty
RUN ./build.sh -B -p win32 -T "$THIRDPARTY_DIR/windows_32" -j $JOBS

ENV FINAL_TARGET_DIR=/opt/target
ENV PLUGIN_BIN_DIR=/opt/godot-videodecoder/bin

WORKDIR /opt/godot-videodecoder
COPY . .
RUN scons -c
RUN scons platform=windows bits=32 target=template_release godot_cpp_path=/opt/godot-cpp target_path="${FINAL_TARGET_DIR}"
